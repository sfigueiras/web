{{> _navigation}}

<main id="main">

  <div id="landing" class="landing">
    <video poster="images/background-landing-estatico-compressed.png" id="bgvid" playsinline autoplay muted loop>
        <source src="videos/landing.mp4" type="video/mp4">
        <!--<source src="videos/landing.webm" type="video/webm">-->
    </video>
    
    <div class="claim">
      <hr class="left">
      <h1 class="title">{{title}}</h1>
      <hr class="left">
      <p class="slogan">{{claim}}</p>
    </div>

    <div class="swipe-down">
      <p>{{ swipe }}</p>
      <img class="arrow down" src="images/arrow-green.png" alt="swipe down arrow">
    </div>
  </div>

  <div id="mobile-nav-hide"></div>

  <div class="parallax-surface">
    <div id="intersection" data-mobile-down="purple" data-mobile-up="purple" data-tablet-down-class="white" data-tablet-up-class="purple"></div>
    <div id="parallax" class="parallax"></div>
    
    <!-- Offers -->
    
    <article class="offer custom">
      <div class="content">
        <h1 style="display: inline-block">{{ custom }}</h1>

        <ul class="targets">
        {{#targets}}
            <li class="target">
                <p>{{first}} <b>{{important}}</b>{{second}}</p>
            </li>
        {{/targets}}
        </ul>
        
        <a class="button-secondary" href="/contact.html">{{ want }}</a>
        <a class="more-info link-secondary" href="services.html">+ {{ moreInfo }}</a>
      </div>

      <hr style="margin-top: 80px"><h1>{{ boxing }}</h1>
    </article>

    <section class="offers">
      {{#offers}}
      
        <article class="offer">
          <div class="content">
            <img class="icon" src="{{icon}}" alt="mvp offer logo">
            <h1>{{name}}</h1>
            <hr class="left">
            <div class="text-container">
              <p><b>{{ outstanding }}</b>{{description}}</p>
            </div>
            <img  onclick="toggleOfferDescription(this)" class="arrow" src="images/arrow-dark-purple.png" alt="show less arrow">
            <a class="learn-more" href="services.html">+{{ learn }}</a>
          </div>

          <footer class="action">
            <a class="button" href="/contact.html">{{ want }}</a>
          </footer>
        </article>

    {{/offers}}

      <div id="wave" class="wave"></div>
    </section>

    <!-- Etiam -->
    <section class="work">
      <div id="scrolling">
        <ul>
          <li>
            <img src="images/etiam-1.webp" onerror="this.onerror=null; this.src='images/etiam-1.jpg'" alt="etiam picture">
          </li>
          <li>
            <img src="images/etiam-2.webp" onerror="this.onerror=null; this.src='images/etiam-1.jpg'" alt="etiam picture">
          </li>
          <li>
            <img src="images/etiam-3.webp" onerror="this.onerror=null; this.src='images/etiam-1.jpg'" alt="etiam picture">
          </li>
      </ul>
    </section>

    <div class="forms">
      <!-- Contact us !-->
      <section class="contact-us">
        <hr>
        <div class="content">
          <h1>{{ contact.header }}</h1>
          <p class="contact-phrase">{{ contact.phrase }} <br><br> {{ contact.assure }}
          </p>
        </div>

        <div class="form-container">
          <form class="form" id="f_contact" action="/web/contact.php" method="post">
            <input type="text" name="company_name" placeholder="{{contact.company}}" required>
            <input type="email" name="email_address" placeholder="{{ contact.email }}" required>
            <textarea name="message" placeholder="{{ contact.message }}" required></textarea>

            <br>

            <div class="center">
                <button type="submit" id="r_contact" class="button-terciary">
                    {{ send }}
                </button>
            </div>
          </form>
        </div>
      </section>

      <!-- Join us !-->
      <section class="join-us">

        <div class="background">
          <hr>
          <div class="content">
            <h1>{{ join.header }}</h1>
            <p>{{ together }}</p>
          </div>

          <div class="form-container">
            <form class="form" id="f_joinus" action="/web/contact.php" method="post" enctype="multipart/form-data">
              <div class="custom-file-input">
                <input type="file" name="adjunto" id="file">
                <div class="wrapper">
                  <label for="file" class="file-input">{{join.placeholder}} <i class="icon fa fa-arrow-up " aria-hidden="true"></i></label>
                </div>
              </div>

              <br>
              <div class="center">
                <button type="submit" id="r_joinus" class="button-secondary">
                    {{ send }}
                </button>
              </div>
            </form>
          </div>
        </div>
        <div class="follow">
          <br>
          <hr class="left">
          <h1>{{ follow }}</h1>
          <p>{{ followPhrase }}</p>
        </div>
      </section>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha256-k2WSCIexGzOj3Euiig+TlR8gA0EmPjuc79OEeY5L45g="
    crossorigin="anonymous"></script>


  <script src="vendor/itemslide/itemslide.min.js"></script>
  <script src="js/Parallax.js"></script>

  <script src="js/landing.js"></script>
  <script src="https://www.google.com/recaptcha/api.js?onload=myCallBack&render=explicit" async defer></script>
</main>
{{> _footer }}
