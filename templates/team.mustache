{{> _navigation}}
<div id="landing" class="landing">

    <h1>{{ title }}</h1>
</div>

<div id="mobile-nav-hide"></div>

<div class="members">
    {{#core}}
    <div class="core-member">
        <img class="member-picture" src="{{ picture }}" alt="santiago figueiras picture">

        <h1 class="name">{{ name }}</h1>
        <hr>
        <h5 class="role">{{ role }}</h5>

        <p class="bio"><b>{{ bio.rest }}</b>{{ bio.bold }}
        </p>

        <div class="social-icons">
            <a href=src="{{ social.facebook }}">
                <img class="social-icon"class="social-icon"  src="images/social/facebook-icon-gris1.svg" alt="facebook logo grey">
            </a>
            <a href="{{ social.instagram }}">
                <img class="social-icon"class="social-icon"  src="images/social/instagram-icon-gris1.svg" alt="instagram logo grey">
            </a>
            <a href="{{ social.linkedin }}">
                <img class="social-icon"class="social-icon"  src="images/social/linkedin-icon-gris1.svg" alt="linkedin logo grey">
            </a>
        </div>
    </div>
    {{/core}}

</div>

<div class="advisory-board">
    <h1 class="title">Advisory board</h1>
    {{#advisors}}
    <div class="board-member">
        <img class="member-picture board" src="{{ picture }}" alt="santiago figueiras picture">
        <h1 class="name">{{name}}</h1>

        <img class="arrow" src="images/arrow-green.png" alt="arrow green pointing up">
        <h4 class="profile">{{profile}}</h4>

        <div class="extra-info">
            <p class="bio">{{ bio }}</p>
            <p class="country">{{ country }}</p>
        </div>
        
        <div class="social-icons">
            <a href=src="{{ social.facebook }}">
                <img class="social-icon" src="images/social/facebook-icon-gris1.svg" alt="facebook logo grey">
            </a>
            <a href="{{ social.instagram }}">
                <img class="social-icon" src="images/social/instagram-icon-gris1.svg" alt="instagram logo grey">
            </a>
            <a href="{{ social.linkedin }}">
                <img class="social-icon" src="images/social/linkedin-icon-gris1.svg" alt="linkedin logo grey">
            </a>
        </div>
    </div>
    {{/advisors}}
</div>

<section class="how-we-work">
    <h1>How we work</h1>

    <div class="values">
        <div class="value">
            <img src="images/square-green.png" alt="green square">
            <h3>We make your projects come true</h3>

            <p>We work as a team with our clients enhancing their digital projects with our experience in design, usability,
                technologies and software.
            </p>
        </div>

        <div class="value">
            <img src="images/marker-green.png" alt="green marker">
            <h3>Focus on user experience</h3>

            <p>We analyze technology, market, and users behaviour, to design simple and intuitive interfaces that enhance business
                objectives.
            </p>
        </div>

        <div class="value">
            <img src="images/circle-green.png" alt="green square">
            <h3>Technology made simple</h3>

            <p>We build apps with technology that optimize resources and usability, making it invisible for users and clients
                as well.
            </p>
        </div>
    </div>
</section>

<section class="experience">
    <h1 class="phrase">Más de 10 años de experiencia construyendo productos y servicios.</h1>
    <img class="transparentize" src="images/background-landing-estatico-compressed.png" alt="purple clode image">
</section>
{{> _footer }}

<script>
    changeNavColor('white');
</script>
